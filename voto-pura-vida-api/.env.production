# =================================
# CONFIGURACIÓN DE PRODUCCIÓN (AZURE)
# =================================

# Base de datos Azure SQL
AZURE_SQL_SERVER=tu-servidor.database.windows.net
AZURE_SQL_DATABASE=voto_pura_vida
AZURE_SQL_USER=tu_usuario
AZURE_SQL_PASSWORD=tu_password_seguro

# String de conexión para Azure SQL
DATABASE_URL=Server=tu-servidor.database.windows.net;Database=voto_pura_vida;User Id=tu_usuario;Password=tu_password_seguro;Encrypt=true;TrustServerCertificate=false;

# Configuración del servidor
NODE_ENV=production
PORT=3000

# JWT y Seguridad (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=123456
JWT_EXPIRES_IN=24h

# CORS (dominios permitidos en producción)
CORS_ORIGIN=https://tu-dominio.com,https://admin.tu-dominio.com

# Logs
LOG_LEVEL=info

# Vercel
VERCEL_ENV=production

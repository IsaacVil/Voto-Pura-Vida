# Variables de entorno para Voto Pura Vida
# Copie este archivo como .env y configure los valores apropiados

# Base de datos
PRISMA_DATABASE_URL="sqlserver://localhost:14333;database=VotoPuraVida;user=sa;password=VotoPuraVida123#;trustServerCertificate=true;encrypt=true"

# Autenticación JWT
JWT_SECRET="tu-secreto-jwt-muy-seguro-y-largo-aqui"
JWT_REFRESH_SECRET="tu-secreto-refresh-muy-seguro-y-diferente-aqui"

# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de encriptación
ENCRYPTION_SALT="voto-pura-vida-salt"

# Configuración de MFA
MFA_ISSUER="Voto Pura Vida"

# Configuración de emails (opcional - para funcionalidades futuras)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@votopuravida.cr"

# Configuración de SMS (opcional - para funcionalidades futuras)
SMS_PROVIDER=""
SMS_API_KEY=""

# Configuración de seguridad
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# Configuración de sesiones
SESSION_TIMEOUT_HOURS=24
REFRESH_TOKEN_TIMEOUT_DAYS=7
REMEMBER_DEVICE_TIMEOUT_DAYS=30

# Configuración de rate limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15
LOCKOUT_DURATION_MINUTES=30

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# URLs del frontend (para redirecciones)
FRONTEND_URL="http://localhost:3001"
FRONTEND_LOGIN_URL="http://localhost:3001/login"
FRONTEND_RESET_PASSWORD_URL="http://localhost:3001/reset-password"
